<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="contentPane" prefHeight="450.0" prefWidth="580.0" stylesheets="@CSS/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.samplesalad.controller.LoginController">
   <children>
      <ImageView fitHeight="250.0" fitWidth="150.0" layoutX="215.0" layoutY="46.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/logo.png" />
         </image>
      </ImageView>
      <TextField fx:id="emailField" layoutX="207.0" layoutY="196.0" prefHeight="26.0" prefWidth="165.0" promptText="Email" styleClass="text-field" />
      <PasswordField fx:id="passwordField" layoutX="207.0" layoutY="235.0" prefHeight="26.0" prefWidth="166.0" promptText="Password" styleClass="password-field" />
      <Button fx:id="loginButton" layoutX="297.0" layoutY="272.0" onMouseClicked="#handleLogin" prefHeight="46.0" prefWidth="75.0" text="Login" />
      <Button fx:id="signUpButton" layoutX="207.0" layoutY="272.0" onMouseClicked="#register" prefHeight="46.0" prefWidth="75.0" text="Sign up" />
      <Label fx:id="loginStatusLabel" layoutX="215.0" layoutY="310.0" />
   </children>
</AnchorPane>
